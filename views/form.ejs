  <link href="/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
    <a class="navbar-brand" href="/">
      <img src="/images/PeerHabit.png" alt="PeerHabit" width="80%" height="80%"
        class="d-inline-block align-text-top" href="/<%=user_id%>/home" style="margin-left: 15px;">
      <!-- If any text for logo, goes here -->
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link nav-link-custom" href="/<%=user_id%>/home">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-link-custom" href="/<%=user_id%>/create-habit" style="margin-right: 20px;">Create a Group</a>
        </li>
        <a class="navbar-brand" href="/<%=user_id%>">
          <img src="/images/avataaars_1.png" width="30" height="30" class="d-inline-block align-top"
            href="user.html" alt="PP">
        </a>
      </ul>
    </div>
  </nav>

  <div class="text-center" id="user-name">
    <h1 class="my-5">New Habit</h1>
  </div>

  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <form action="/<%=user_id%>/create-habit" method="post">
        <div class="mb-3">
          <label for="habitname" class="form-label"></label>
          <input name = 'groupname' type="text" class="form-control" id="habitname" placeholder="Habit Name">
        </div>
        <div class=mb-3 align=center style="font-size: 20px;">
          Frequency
        </div>
        <div class="week-days-container">
          <label class="week-day-label">
            <input name = 'fr1'type="checkbox" class="week-day-checkbox" value="Monday" />
            <span class="week-day-initial">M</span>
          </label>
          <label class="week-day-label">
            <input name= 'fr2'type="checkbox" class="week-day-checkbox" value="Tuesday" />
            <span class="week-day-initial">T</span>
          </label>
          <label class="week-day-label">
            <input name='fr3'type="checkbox" class="week-day-checkbox" value="Wednesday" />
            <span class="week-day-initial">W</span>
          </label>
          <label class="week-day-label">
            <input name='fr4'type="checkbox" class="week-day-checkbox" value="Thursday" />
            <span class="week-day-initial">T</span>
          </label>
          <label class="week-day-label">
            <input name='fr5'type="checkbox" class="week-day-checkbox" value="Friday" />
            <span class="week-day-initial">F</span>
          </label>
          <label class="week-day-label">
            <input name = 'fr6'type="checkbox" class="week-day-checkbox" value="Saturday" />
            <span class="week-day-initial">S</span>
          </label>
          <label class="week-day-label">
            <input name="fr7" type="checkbox" class="week-day-checkbox" value="Sunday" />
            <span class="week-day-initial">S</span>
          </label>
        </div>
        <div class="col text-center d-flex align-items-center justify-content-center">
          <button type="submit" class="btn btn-primary ">Submit</button>
        </div>
      </form>
    </div>
    <div class="col-sm-4">
    </div>
    <!--Above each of the 3 column class names end with 4 which adds up to 12-->
  </div>
  </div>
  </div>
  </div>
